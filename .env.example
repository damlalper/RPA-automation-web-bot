# RPAFlow Configuration
# Copy this file to .env and fill in your values

# ===================
# Application Settings
# ===================
APP_NAME=RPAFlow
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# ===================
# Database Settings
# ===================
# SQLite (development)
DATABASE_URL=sqlite:///./data/rpaflow.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/rpaflow

# ===================
# API Settings
# ===================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ===================
# Selenium Settings
# ===================
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
BROWSER_TYPE=chrome

# ===================
# Proxy Settings
# ===================
PROXY_ENABLED=false
PROXY_ROTATION_STRATEGY=round_robin
PROXY_HEALTH_CHECK_INTERVAL=60
PROXY_TIMEOUT=10

# Proxy list file path (one proxy per line: ip:port or ip:port:user:pass)
PROXY_LIST_FILE=./config/proxies.txt

# ===================
# Scraping Settings
# ===================
SCRAPING_DELAY_MIN=1.0
SCRAPING_DELAY_MAX=3.0
SCRAPING_MAX_RETRIES=3
SCRAPING_RETRY_DELAY=5.0

# ===================
# Worker Settings
# ===================
WORKER_POOL_SIZE=5
WORKER_MAX_CONCURRENT=10
WORKER_TASK_TIMEOUT=300

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_BURST=10
